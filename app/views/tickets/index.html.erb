<p id="notice"><%= notice %></p>

<h1>Listing Tickets</h1>

<table>
  <thead>
    <tr>
      <th>Time restriction</th>
      <th>Entries remaining</th>
      <th>Activated on</th>
      <th>Paid</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.time_restriction %></td>
        <td><%= ticket.entries_remaining %></td>
        <td><%= ticket.activated_on %></td>
        <td><%= ticket.paid %></td>
        <td><%= ticket.user_id %></td>
        <td><%= link_to 'Show', ticket %></td>
        <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
        <td><%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

