<script type="text/javascript">
    $(function () {
        $("#calendars_summary_calendars").tabs();
    });
</script>
<div id="calendars_summary_calendars">
  <ul>
    <% Therapy.select(:id, :name).find_each do |therapy| %>
        <li><a href="#tab-<%= therapy.id %>"><%= therapy.name %></a></li>
    <% end %>
  </ul>
  <% Therapy.find_each do |therapy| %>
      <div id="tab-<%= therapy.id %>">
        <%= render partial: "calendars/calendar_final_with_week_selector", locals: {calendar: therapy.calendar, beginning_date: Date.today} %>
      </div>
  <% end %>
</div>
<div id="calendars_summary_coaches">
  <% @data[:coaches].each do |coach| %>
    <div class="coach_view">
      <h3><%= coach.name %></h3>
      <%= image_tag coach.photo.resized.url.to_s if coach.photo_url.present? %>
      <div style="background-color: <%= coach.color_code %>; width: 100%; height: 1em"></div>
    </div>
  <% end %>
</div>
