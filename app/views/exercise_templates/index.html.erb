<h1>Listing Exercise Templates</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exercise_templates.each do |exercise_template| %>
      <tr>
        <td><%= link_to 'Zobrazit', exercise_template %></td>
        <td><%= link_to 'Upravit', edit_exercise_template_path(exercise_template) %></td>
        <td><%= link_to 'Odstranit', exercise_template, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

