<p id="notice"><%= notice %></p>

<h1>Záznamy</h1>

<table>
  <thead>
    <tr>
      <th>Datum</th>
      <th>Jméno uživatele</th>
      <th>Sledovaný parametr</th>
      <th>Hodnota</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
      	<td><%= l record.date %></td>
      	<td><%= record.tracked_value.user.full_name %></td>
      	<td><%= record.tracked_value.available_value.name %></td>
        <td><%= record.value %></td>
        <td><%= link_to 'Zobrazit', record %></td>
        <td><%= link_to 'Upravit', edit_record_path(record) %></td>
        <td><%= link_to 'Odstranit', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "Nový záznam", new_record_path %>
