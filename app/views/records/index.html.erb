<p id="notice"><%= notice %></p>

<h1>Listing Records</h1>

<table>
  <thead>
    <tr>
      <th>Tracked value</th>
      <th>Value</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.tracked_value_id %></td>
        <td><%= record.value %></td>
        <td><%= record.date %></td>
        <td><%= link_to 'Zobrazit', record %></td>
        <td><%= link_to 'Upravit', edit_record_path(record) %></td>
        <td><%= link_to 'Odstranit', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

