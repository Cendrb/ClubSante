<p id="notice"><%= notice %></p>

<h1>Listing Exercises</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Available</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exercises.each do |exercise| %>
      <tr>
        <td><%= exercise.date %></td>
        <td><%= exercise.available %></td>
        <td><%= link_to 'Zobrazit', exercise %></td>
        <td><%= link_to 'Upravit', edit_exercise_path(exercise) %></td>
        <td><%= link_to 'Odstranit', exercise, method: :delete, data: { confirm: 'Jste si jisti?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

