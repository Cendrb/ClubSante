<p id="notice"><%= notice %></p>

<h1>Sledovatelné hodnoty</h1>

<table>
  <thead>
    <tr>
      <th>Jméno</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @available_values.each do |available_value| %>
      <tr>
        <td><%= available_value.name %></td>
        <td><%= link_to 'Zobrazit', available_value %></td>
        <td><%= link_to 'Upravit', edit_available_value_path(available_value) %></td>
        <td><%= link_to 'Odstranit', available_value, method: :delete, data: { confirm: 'Jste si jisti?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Přidat novou', new_available_value_path %>
