<%= javascript_include_tag "http://code.highcharts.com/highcharts.js" %>
<%= javascript_include_tag "application", "chartkick" %>

<script>
	Highcharts.setOptions({
	lang: {
    	months: ['Leden', 'Únor', 'Březen', 'Duben', 'Květen', 'Červen', 'Červenec', 'Srpen', 'Září', 'Říjen', 'Listopad', 'Prosinec'],
    	weekdays: ['Neděle', 'Pondělí', 'Úterý', 'Středa', 'Čtvrtek', 'Pátek', 'Sobota'],
    	shortMonths: ["Led", "Úno", "Bře", "Dub", "Kvě", "Čvn", "Čvc", "Srp", "Zář", "Říj", "Lis", "Pro"]
	} });
</script>

<div id="user_summary_accordion">
	<h2>Moje permanentky</h2>
	<div id="user_summary_tickets">
		<% if @tickets.count > 0 %>
			<%= render partial: "tickets/user_summary_tickets_index", locals: {tickets: @tickets} %>
		<% else %>
			Nemáte zakoupeny žádné permanentky
	<% end %>
	</div>
	
	<h2>Moje rezervace</h2>
	<div id="user_summary_exercises">
		<% if @exercises.count > 0 %>
			<table id="user_summary_exercises_table">
				<tr>
					<th>Datum</th>
					<th>Čas</th>
					<th>Terapie</th>
					<th></th>
				</tr>
				<%= render partial: "exercises/user_summary_exercise_line", collection: @exercises %>
			</table>
		<% else %>
			Nemáte žádné rezervace
		<% end %>
		<br />
		<%= link_to "Rezervovat", calendar_summary_path, data: { no_turbolink: true } %>
	</div>
	
	<h2>Moje cíle</h2>
	<div id="user_summary_goals">
		<% if access_for_level?(User.al_customer) %>
			<% if current_user.tracked_values.count == 0 %>
				Nemáte zapsané žádné sledované hodnoty
			<% end %>
			
			<% current_user.tracked_values.each do |tracked| %>
				<span class="user_summary_tracked_value_name"><%= tracked.available_value.name %></span>
				<%= line_chart tracked_value_chart_path(tracked_value_id: tracked.id), library: { chart: { marginTop: 30 } } %>
			<% end %>
		<% else %>
			Pro monitorování osobních cílů si sjednejte osobní schůzku
		<% end %>
	</div>
	
	<% if access_for_level?(User.al_admin) %>
		<h2>Administrace</h2>
		<div id="user_summary_administration">
			<%= link_to "Rezervovat", calendar_summary_path, data: { no_turbolink: true } %><br />
			<%= link_to "Terapie", therapies_path %><br />
			<%= link_to "Kategorie", therapy_categories_path %><br />
			<br />
			<%= link_to "Zaznamenat aktuální stav", new_record_path %> (<%= link_to "všechny záznamy", records_path %>)<br />
			<%= link_to "Zaznamenat cíl", new_goal_path %> (<%= link_to "všechny cíle", goals_path %>)<br />
			<br />
			<%= link_to "Uživatelé", users_path %><br />
			<%= link_to "Trenéři", coaches_path %><br />
			<%= link_to "Permanentky", tickets_path %><br />

			<%= link_to "Sledovatelné hodnoty", available_values_path %>
		</div>
	<% end %>
</div>