<p id="notice"><%= notice %></p>

<h1>Uživatelé</h1>

<table>
  <thead>
    <tr>
      <th>Jméno</th>
      <th>Email</th>
      <th>Úroveň přístupu</th>
      <th>Sledované hodnoty</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
      	<td><%= user.full_name %></td>
        <td><%= user.email %></td>
        <td><%= User.get_access_level_string(user.access_level) %></td>
        <td><%= (user.tracked_values.map { |tracked| tracked.name }).join(", ").downcase %></td>
        <td><%= link_to 'Nastavit sledované hodnoty a úroveň přístupu', admin_edit_user_path(user) %></td>
        <td><%= link_to 'Upravit', edit_user_path(user) %></td>
        <td><%= link_to 'Odstranit', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

