<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Email" %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label "Jméno" %><br>
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label "Příjmení" %><br>
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label "Heslo", 'Heslo (pro heslo žádná omezení neplatí)' %><br>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label "Potvrzení hesla", 'Potvrzení hesla' %><br>
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
