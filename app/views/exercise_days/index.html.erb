<p id="notice"><%= notice %></p>

<h1>Listing Exercise Days</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exercise_days.each do |exercise_day| %>
      <tr>
        <td><%= exercise_day.date %></td>
        <td><%= link_to 'Show', exercise_day %></td>
        <td><%= link_to 'Edit', edit_exercise_day_path(exercise_day) %></td>
        <td><%= link_to 'Destroy', exercise_day, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

