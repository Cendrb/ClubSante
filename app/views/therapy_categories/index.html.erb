<p id="notice"><%= notice %></p>

<h1>Kategorie terapií</h1>

<table>
  <thead>
    <tr>
      <th>Název</th>
      <th>Zahrnuté terapie</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @therapy_categories.each do |therapy_category| %>
      <tr>
        <td><%= therapy_category.name %></td>
        <td><%= (therapy_category.therapies.map { |therapy| therapy.name }).join(", ").downcase %></td>
        <td><%= link_to 'Upravit', edit_therapy_category_path(therapy_category) %></td>
        <td><%= link_to 'Odstranit', therapy_category, method: :delete, data: { confirm: 'Jste si jisti?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

