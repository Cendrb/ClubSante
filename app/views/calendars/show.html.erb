<style type="text/css">
	#calendar_timetable
	{
  		border-collapse: collapse;
	}
	td
  	{
    	width: 10em;
    	border: 1px solid black;
  	}
	.calendar_template_exercise
	{
		border: 2px solid green;
    	width: 100%;
    	background-color: orange;
	}
	.calendar_weekday
	{
		position: relative;
		vertical-align: top;
	}
	.calendar_hour
	{
		height: <%= @pixels_per_minute * 60 %>px;
		text-align: center;
		position: relative;
		border-bottom: 1px solid black;
		margin-bottom: -2px;
	}
</style>

<script>
	$(function() {
		$(".calendar_template_exercise").click(function(event)
			{
				var clicked = $(this);
				$.ajax({
					type: "POST",
					url: "/users/signup_for_new",
					data: { exercise_template_id: clicked.data("id"), date: clicked.data("date") },
					dataType: 'script',
					format: 'js',
					success: function(msg){
						alert("suckcess");
					}
				});
			});
	});
</script>

<table id="calendar_timetable">
	<tr>
		<td></td>
		<% counter = 0 %>
		<% I18n.t(:"date.day_names").rotate.each do |weekday_name| %>
			<td><%= weekday_name %> (<%= l(@monday_date + counter.days) %>)</td>
			<% counter += 1 %>
		<% end %>
	</tr>
	<tr>
		<td> 
			<% for hour in @first_hour..@last_hour %>
				<div class="calendar_hour">
					<%= hour %>:00
				</div>
			<% end %>
		</td>
		
		<% for weekday in 0..6 %>
			<td class="calendar_weekday" oncontextmenu="return false;" data-weekday=<%= weekday %>">
				<% date = @monday_date + weekday.days %>
				<% @templates.where(weekday: weekday).each do |template| %>
					<%= render partial: "exercise_templates/exercise_template_for_calendar", locals: { exercise_template: template, date: date, pixels_per_minute: @pixels_per_minute, beginning_offset: @first_hour * 60 * @pixels_per_minute } %>
				<% end %>
				
				<% @registered.each do |registered| %>
				<% end %>
			</td>
		<% end %>
	</tr>
</table>
