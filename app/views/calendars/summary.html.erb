<script type="text/javascript">
	$(function() {
		$("#tabs").tabs();
	});
</script>
<div id="tabs">
	<ul>
		<% Therapy.select(:id, :name).find_each do |therapy| %>
			<li><a href="#tab-<%= therapy.id %>"><%= therapy.name %></a></li>
		<% end %>
	</ul>
	<% Therapy.find_each do |therapy| %>
		<div id="tab-<%= therapy.id %>">
			<div class="calendar_with_week_selector" data-therapy=<%= therapy.id %>>
				<%= render partial: "calendars/calendar_with_week_selector", locals: {calendar: therapy.calendar, beginning_date: Date.today} %>
			</div>
		</div>
	<% end %>
</div>
