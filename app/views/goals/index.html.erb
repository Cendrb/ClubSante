<p id="notice"><%= notice %></p>

<h1>Cíle</h1>

<table>
  <thead>
    <tr>
      <th>Datum</th>
      <th>Jméno uživatele</th>
      <th>Sledovaný parametr</th>
      <th>Hodnota</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @goals.each do |goal| %>
      <tr>
        <td><%= l goal.date %></td>
      	<td><%= goal.tracked_value.user.full_name %></td>
      	<td><%= goal.tracked_value.available_value.name %></td>
        <td><%= goal.value %></td>
        <td><%= link_to 'Zobrazit', goal %></td>
        <td><%= link_to 'Upravit', edit_goal_path(goal) %></td>
        <td><%= link_to 'Odstranit', goal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Přidat cíl', new_goal_path %>
