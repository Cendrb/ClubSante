<h1>Nový cíl</h1>
<%= form_tag goals_path, method: :post do %>
	<%= select_tag("users", options_from_collection_for_select(User.all, "id", "full_name", @user.id), class: "new_goals_user_select") %>
	<div class="new_records_recordables">
		<%= render partial: "goals/user_recordables", locals: {user: @user} %>
	</div>
	<div class="field"><%= select_date(params[:date], prefix: "date") %></div>
	<%= submit_tag "Zapsat cíl" %>
<% end %>

<%= link_to 'Zpět', goals_path %>
